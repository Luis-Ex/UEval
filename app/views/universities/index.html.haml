- model_class = University
.page-header
  %h1.title.text-center
    %i.fa.fa-graduation-cap Universidades
    %hr
    - @universities.each do |university|
      .row
        .col-md-10.col-md-offset-1
          %h2.university-title= university.name
          %a{:href => university_schools_path(university_id: university.id)}
            = image_tag("banners/#{university.banner}", :alt => "home image", :class => "img-responsive")
          %a.university-link{:href => university.webpage} Sitio Web
    %hr