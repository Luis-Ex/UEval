= form_for @professor, url: school_professors_path(school_id: @school_id), html: { class: "form form-horizontal professor" } do |f|
  .form-group
    = f.label :name, class: 'control-label'
    .controls
      = f.text_field :name, class: 'form-control', required: true
    = error_span(@professor[:name])
  .form-group
    = f.label :last_name, class: 'control-label'
    .controls
      = f.text_field :last_name, class: 'form-control', required: true
    = error_span(@professor[:last_name])
  .form-group
    = f.label :overall_score, class: 'control-label'
    .controls
      = f.text_field :overall_score, class: 'form-control', required: true
    = error_span(@professor[:overall_score])
  .form-group
    = f.label :school_id, class: 'control-label'
    .controls
      = f.text_field :school_id, class: 'form-control', required: true
    = error_span(@professor[:school_id])
  = f.submit nil,class: 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), school_professors_path(school_id: @school_id), :class => 'btn btn-default'
