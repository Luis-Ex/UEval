- model_class = Course
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @course.name
%p
  %strong= model_class.human_attribute_name(:overall_difficulty) + ':'
  %br
  = @course.overall_difficulty
%p
  %strong= model_class.human_attribute_name(:school_id) + ':'
  %br
  = @course.school_id

= link_to t('.back', :default => t("helpers.links.back")), school_courses_path(school_id: @course.school_id), :class => 'btn btn-default'
